<% layout("layouts/boilerplate") -%>
    <h1 style="text-align: center;">New Campground</h1>
    <div class="mb-3">
        <a href="/campgrounds" class="btn btn-warning mb-3"> All Campground</a>
    </div>

    <form action="/campgrounds/new" method="POST">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" placeholder="Title campground" name="campground[title]">
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input type="text" class="form-control" id="image" placeholder="Image campground" name="campground[image]">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" rows="3" name="campground[description]"></textarea>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" class="form-control" id="location" placeholder="Location" name="campground[location]">
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text">$</span>
            <input type="text" class="form-control" aria-label="price" name="campground[price]">
            <span class="input-group-text">.00</span>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-success mb-3">Add Campground</button>
        </div>
    </form>